{
	"manifest_version": 3,
	"name": "Scroll Web page",
	"version": "1.0.0",
	"description": "This is to scroll Web page automatically.",
	"icons": {
		"16": "icon/icon16.png",
		"48": "icon/icon48.png",
		"128": "icon/icon128.png"
	},
	"action": {
		"default_icon": "icon/icon128.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"css": ["style.css"],
		"js": ["contents.js"]
	}],
	"background":{
		"sevice_worker": "background.js"
	},
	"permissions": ["activeTab"]
}